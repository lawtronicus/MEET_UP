{
  "parser": "@babel/eslint-parser",
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-react"]
    },
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "warn",
    "no-underscore-dangle": ["warn", { "allow": ["__WB_MANIFEST"] }],
    "prefer-regex-literals": "off",
    "prefer-template": "off",
    "react/function-component-definition": "off",
    "no-unused-vars": "warn",
    "no-use-before-define": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
    "camelcase": "off",
    "no-unused-expressions": "warn",
    "consistent-return": "warn",
    "no-else-return": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/no-noninteractive-element-interactions": "off",
    "react/prop-types": "off",
    "react/button-has-type": "off",
    "no-return-assign": "off", // Disable no-return-assign rule
    "prefer-destructuring": "warn", // Change prefer-destructuring to warn
    "arrow-body-style": "warn", // Change arrow-body-style to warn
    "no-param-reassign": "warn" // Change no-param-reassign to warn
  }
}
